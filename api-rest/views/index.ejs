<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
       <div class="jumbotron">
           <div class="row">
               <div class="offset-4">
                   <h1>Lista de tareas</h1>
                   
                   <form action="/add" method="POST">
                        <div class="form-group">
                            <label for="tarea">Tarea:</label>
                            <input name="taskName"  type="text" class="form-control" placeholder="Ingrese una tarea" autofocus id="tarea">
                          </div>
                          
                          <button type="submit" class="btn btn-primary">Add +</button>
                   </form>

                   <ul class="list-group list-group-flush mt-3">
                        <% for(var i=0; i<data.length; i++) {%>
                           <li class="list-group-item d-flex justify-content-between">
                               <%= data[i] %> 
                               <a href="<%= 'remove/'+ i %>" class="badge badge-danger" role="button">x</a>
                            </li>
                        <% } %>
                    </ul>
               </div>
           </div>
       </div>
    </div>
    <scrip src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js'></scrip>
</body>
</html>